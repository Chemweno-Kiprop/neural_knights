<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>


    <link name="base_link">

    </link>
    
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.105 0 0.0425"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.105 0 0.05" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.105" length="0.10" />
            </geometry>
            <material name="white"/>
        </visual>
         <collision>
            <origin xyz="0.105 0 0.05" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.105" length="0.10" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.8" length="0.1" radius="0.11">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="chassis"> 
        <material>Gazebo/White </material>
    </gazebo>
    

    <!-- LEFT WHEEL -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.09 0.127 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
            <visual>
                <geometry>
                    <cylinder length="0.04" radius="0.0425" />
                </geometry>
                <material name="blue"/>
            </visual>
            <collision>
                <geometry>
                    <cylinder length="0.001" radius="0.0425" />
                </geometry>
            </collision>
            <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.0425">
            <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>
    </link>
    <gazebo reference="left_wheel"> 
        <material>Gazebo/Blue </material>
    </gazebo>

     <!-- RIGHT WHEEL -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.09 -0.127 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.0425" />
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                    <cylinder length="0.001" radius="0.0425" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.0425">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="right_wheel"> 
        <material>Gazebo/Blue </material>
    </gazebo>


    <!-- FRONT CASTER WHEEL

    <joint name="frontCaster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="frontCaster_wheel"/>
        <origin xyz="0.19 0 -0.0425" rpy="0 0 0"/>
    </joint>

    <link name="frontCaster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.0425" />
            </geometry>
            <material name="orange"/>
        </visual>
         <collision>
            <geometry>
                <sphere radius="0.0425" />
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.0425">
             <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
      <gazebo reference="frontCaster_wheel"> 
        <material>Gazebo/Orange </material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo> -->



     <!-- back CASTER WHEEL -->
    <joint name="backCaster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="backCaster_wheel"/>
        <origin xyz="0.02 0 -0.0425" rpy="0 0 0"/>
    </joint>

    <link name="backCaster_wheel">
<visual>
    <geometry>
        <sphere radius="0.0425" />
    </geometry>
    <material name="black"/>
</visual>
<collision>
    <geometry>
        <sphere radius="0.0425" />
    </geometry>
</collision>
<xacro:inertial_sphere mass="0.1" radius="0.0425">
    <origin xyz="0 0 0" rpy="0 0 0"/>
</xacro:inertial_sphere>
    </link>
    <gazebo reference="backCaster_wheel"> 
        <material>Gazebo/Black </material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

      <!-- PI -->
    <joint name="raspi_joint" type="fixed">
         <parent link="chassis"/>
         <child link="raspi_box"/>
         <origin xyz="0.06 0.04 0.1" rpy="0 0 0"/>
    </joint>
    <link name="raspi_box">
        <visual>
            <geometry>
                <box size="0.084 0.057 0.014"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
           <origin xyz="0.06 -0.04 0.12" rpy="0 0 0"/>
           <geometry>
                <box size="0.084 0.057 0.014"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.1" x="0.084" y="0.057" z="0.014">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>
    <gazebo reference="raspi_box"> 
        <material>Gazebo/Black </material>
    </gazebo>
</robot>